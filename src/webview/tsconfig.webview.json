{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "../../dist/webview",
    "rootDir": ".",
    "noImplicitAny": false
  },
  "include": [
    "simple-graph.ts",
    "webview.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
